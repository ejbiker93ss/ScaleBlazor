@page "/settings"
@using ScaleBlazor.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="scale-system">
    <div class="settings-page">
        <div class="settings-header">
            <h1 class="title">Settings</h1>
            <button class="btn-back" @onclick="GoBack" title="Back to Dashboard">
                <span>‚Üê Back</span>
            </button>
        </div>

        @if (settings == null)
        {
            <div class="loading">Loading settings...</div>
        }
        else
        {
            <div class="settings-content">
                <div class="card">
                    <div class="card-header">
                        <span class="icon">Pallets</span>
                        <span>Pallet Configuration</span>
                    </div>
                    <div class="card-body">
                        <div class="setting-item">
                            <label class="setting-label">Readings Per Pallet</label>
                            <input type="number" 
                                   class="setting-input" 
                                   @bind="settings.ReadingsPerPallet" 
                                   min="1" 
                                   max="100" />
                            <small class="setting-help">Number of weight readings required per pallet</small>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <span class="icon">Auto</span>
                        <span>Auto-Capture Configuration</span>
                    </div>
                    <div class="card-body">
                        <div class="setting-item">
                            <label class="setting-checkbox">
                                <input type="checkbox" @bind="settings.AutoCaptureEnabled" />
                                <span>Enable Auto-Capture</span>
                            </label>
                            <small class="setting-help">Automatically capture weight when readings are stable</small>
                        </div>

                        @if (settings.AutoCaptureEnabled)
                        {
                            <div class="setting-item">
                                <label class="setting-label">Stability Threshold (%)</label>
                                <div class="input-with-unit">
                                    <input type="number" 
                                           class="setting-input" 
                                           @bind="settings.AutoCaptureThresholdPercent" 
                                           min="0.1" 
                                           max="10" 
                                           step="0.1" />
                                    <span class="unit">%</span>
                                </div>
                                <small class="setting-help">
                                    Auto-capture when current weight is within this percentage of the last 10 readings
                                </small>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <span class="icon">Connection</span>
                        <span>Scale Connection</span>
                    </div>
                    <div class="card-body">
                        <div class="setting-item">
                            <label class="setting-label">COM Port</label>
                            <input type="text"
                                   class="setting-input"
                                   @bind="settings.ScalePortName"
                                   placeholder="COM3" />
                            <small class="setting-help">Set the port or auto-detect the scale connection.</small>
                        </div>

                        <button class="btn-secondary" @onclick="AutoDetectPort" disabled="@isDetecting">
                            @if (isDetecting)
                            {
                                <span>Detecting...</span>
                            }
                            else
                            {
                                <span>Auto-Detect Port</span>
                            }
                        </button>

                        @if (detectMessage != null)
                        {
                            <div class="save-message @(detectSuccess ? "success" : "error")">
                                @detectMessage
                            </div>
                        }
                    </div>
                </div>

                <div class="settings-actions">
                    <button class="btn-primary" @onclick="SaveSettings" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Settings</span>
                        }
                    </button>

                    @if (saveMessage != null)
                    {
                        <div class="save-message @(saveSuccess ? "success" : "error")">
                            @saveMessage
                        </div>
                    }
                </div>

                <div class="card">
                    <div class="card-header">
                        <span class="icon">Data</span>
                        <span>Data Retention</span>
                    </div>
                    <div class="card-body">
                        <div class="setting-item">
                            <label class="setting-label">Delete data older than</label>
                            <input type="date"
                                   class="setting-input"
                                   @bind-value="purgeBefore"
                                   @bind-value:format="yyyy-MM-dd"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <small class="setting-help">Deletes readings and pallets created before this date.</small>
                        </div>

                        <button class="btn-secondary" @onclick="PurgeData" disabled="@isPurging">
                            @if (isPurging)
                            {
                                <span>Deleting...</span>
                            }
                            else
                            {
                                <span>Delete Old Data</span>
                            }
                        </button>

                        @if (purgeMessage != null)
                        {
                            <div class="save-message @(purgeSuccess ? "success" : "error")">
                                @purgeMessage
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <span class="icon">Diagnostics</span>
                        <span>Raw Scale Readings</span>
                    </div>
                    <div class="card-body">
                        <button class="btn-secondary" @onclick="LoadRawReadings" disabled="@isLoadingRaw">
                            @if (isLoadingRaw)
                            {
                                <span>Reading...</span>
                            }
                            else
                            {
                                <span>Refresh Raw Readings</span>
                            }
                        </button>

                        @if (rawMessage != null)
                        {
                            <div class="save-message @(rawSuccess ? "success" : "error")">
                                @rawMessage
                            </div>
                        }

                        @if (rawReadings.Count > 0)
                        {
                            <pre class="setting-help">@string.Join("\n", rawReadings)</pre>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private AppSettings? settings;
    private bool isSaving;
    private string? saveMessage;
    private bool saveSuccess;
    private bool isDetecting;
    private string? detectMessage;
    private bool detectSuccess;
    private DateTime purgeBefore = DateTime.Today.AddDays(-30);
    private bool isPurging;
    private string? purgeMessage;
    private bool purgeSuccess;
    private bool isLoadingRaw;
    private string? rawMessage;
    private bool rawSuccess;
    private List<string> rawReadings = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        try
        {
            settings = await Http.GetFromJsonAsync<AppSettings>("api/settings");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
            saveMessage = $"Error loading settings: {ex.Message}";
            saveSuccess = false;
        }
    }

    private async Task AutoDetectPort()
    {
        if (settings == null) return;

        isDetecting = true;
        detectMessage = null;

        try
        {
            var response = await Http.PostAsync("api/scale/auto-detect", null);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<PortDetectionResult>();
                settings.ScalePortName = result?.PortName ?? settings.ScalePortName;
                detectMessage = result?.Message ?? "Port detected and saved.";
                detectSuccess = true;
            }
            else
            {
                var result = await response.Content.ReadFromJsonAsync<PortDetectionResult>();
                detectMessage = result?.Message ?? "No scale detected on available ports.";
                detectSuccess = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error detecting port: {ex.Message}");
            detectMessage = $"Error detecting port: {ex.Message}";
            detectSuccess = false;
        }
        finally
        {
            isDetecting = false;
        }
    }

    private async Task SaveSettings()
    {
        if (settings == null) return;

        isSaving = true;
        saveMessage = null;
        
        try
        {
            var response = await Http.PutAsJsonAsync("api/settings", settings);
            if (response.IsSuccessStatusCode)
            {
                saveMessage = "Settings saved successfully!";
                saveSuccess = true;
                await Task.Delay(2000);
                saveMessage = null;
            }
            else
            {
                saveMessage = "Failed to save settings";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving settings: {ex.Message}");
            saveMessage = $"Error: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task PurgeData()
    {
        isPurging = true;
        purgeMessage = null;

        try
        {
            var response = await Http.PostAsJsonAsync("api/settings/purge", new PurgeRequest
            {
                CutoffDate = purgeBefore
            });

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<PurgeResult>();
                purgeMessage = result == null
                    ? "Data deleted."
                    : $"Deleted {result.DeletedReadings} readings and {result.DeletedPallets} pallets.";
                purgeSuccess = true;
            }
            else
            {
                purgeMessage = "Failed to delete old data.";
                purgeSuccess = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting data: {ex.Message}");
            purgeMessage = $"Error deleting data: {ex.Message}";
            purgeSuccess = false;
        }
        finally
        {
            isPurging = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private async Task LoadRawReadings()
    {
        isLoadingRaw = true;
        rawMessage = null;
        rawReadings.Clear();

        try
        {
            var response = await Http.GetAsync("api/scale/raw-readings?count=50");
            if (!response.IsSuccessStatusCode)
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                rawMessage = string.IsNullOrWhiteSpace(errorContent)
                    ? "Failed to load raw readings."
                    : $"Failed to load raw readings: {errorContent}";
                rawSuccess = false;
                return;
            }

            var readings = await response.Content.ReadFromJsonAsync<List<string>>();
            if (readings == null || readings.Count == 0)
            {
                rawMessage = "No raw readings received.";
                rawSuccess = false;
            }
            else
            {
                rawReadings = readings;
                rawMessage = $"Captured {readings.Count} raw readings.";
                rawSuccess = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading raw readings: {ex.Message}");
            rawMessage = $"Error loading raw readings: {ex.Message}";
            rawSuccess = false;
        }
        finally
        {
            isLoadingRaw = false;
        }
    }
}
